<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QR Code Display</title>
    <style>
        /* General styles */
        body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #ffffff;
            background-image: url('https://coolbackgrounds.io/images/backgrounds/index/ranger-4df6c1b6.png');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .container {
            max-width: 900px;
            padding: 40px;
            background-color: rgba(0, 0, 0, 0.8);
            border-radius: 15px;
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
        }

        h1 {
            text-align: center;
            font-size: 36px;
            color: #ffdb4d;
            margin-bottom: 30px;
            font-weight: bold;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7);
        }

        .qr-container {
            text-align: center;
            margin-bottom: 40px;
        }

        .qr-img {
            max-width: 300px;
            margin: 0 auto;
            display: block;
            border: 4px solid #ffdb4d;
            border-radius: 15px;
            background-color: #ffffff;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.5);
        }

        .details {
            margin-top: 30px;
            font-size: 18px;
        }

        h2 {
            font-size: 24px;
            color: #ffdb4d;
            border-bottom: 2px solid #ffdb4d;
            padding-bottom: 8px;
            margin-bottom: 20px;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
        }

        p {
            font-size: 18px;
            line-height: 1.6;
            margin-bottom: 12px;
            color: #ffffff;
        }

        .highlight {
            font-weight: bold;
            color: #ffdb4d;
        }

        .actions {
            display: flex;
            justify-content: space-between;
            margin-top: 40px;
        }

        .btn {
            display: inline-block;
            padding: 12px 30px;
            background-color: #ffdb4d;
            color: #333333;
            border-radius: 8px;
            font-size: 16px;
            text-decoration: none;
            text-align: center;
            transition: background-color 0.3s ease, transform 0.3s ease;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        }

        .btn:hover {
            background-color: #e6c400;
            transform: translateY(-3px);
        }

        .btn:active {
            transform: translateY(0);
        }

        /* Mobile responsive design */
        @media (max-width: 768px) {
            .container {
                padding: 20px;
            }

            .actions {
                flex-direction: column;
                gap: 10px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>QR Code for Registered Laptop</h1>

        <!-- Display QR Code -->
        <div class="qr-container">
            <img src="<%= qrCode %>" alt="QR Code" class="qr-img">
        </div>

        <!-- Laptop Details -->
        <div class="details">
            <h2>Laptop Details</h2>
            <p><span class="highlight">Serial Number:</span> <%= laptopDetails.serialNumber %></p>
            <p><span class="highlight">Model:</span> <%= laptopDetails.model %></p>
            <p><span class="highlight">Brand:</span> <%= laptopDetails.brand %></p>
            <p><span class="highlight">Warranty:</span> <%= laptopDetails.warranty %> years</p>
            <p><span class="highlight">Operating System:</span> <%= laptopDetails.operatingSystem %></p>
            <p><span class="highlight">Memory:</span> <%= laptopDetails.memory %> GB</p>
            <p><span class="highlight">Storage:</span> <%= laptopDetails.storage %> GB</p>

            <% if (laptopDetails.comments && laptopDetails.comments.trim() !== '') { %>
                <h2>Additional Details</h2>
                <p><span class="highlight">Comments:</span> <%= laptopDetails.comments %></p>
            <% } %>

            <h2>User Details</h2>
            <p><span class="highlight">Name:</span> <%= userDetails.name %></p>
            <p><span class="highlight">Email:</span> <%= userDetails.email %></p>
            <p><span class="highlight">Phone:</span> <%= userDetails.phone %></p>
        </div>

        <!-- Navigation Buttons -->
        <div class="actions">
            <a href="/dashboard" class="btn">Go to Dashboard</a>
            <a href="/logout" class="btn">Logout</a>
        </div>
    </div>
</body>
</html>
